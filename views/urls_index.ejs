<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body>

  <%- include partials/_header %>
  
  <!--display the entire URL database, link the shortURLs to redirect to its longURL-->
  
  <% for (let shortURL in urls){ %>
    <div>
      <a href='/u/<%= shortURL %>/'><%= shortURL %></a> <%= `:  ${urls[shortURL]} ` %>
    
  <!--delete specific URL from urlDatabase-->

      <form method="POST" action="/urls/<%= shortURL %>/delete">
        <input type="submit" value="Delete">
      </form>
    </div>
  <% } %>

</body>
</html>
