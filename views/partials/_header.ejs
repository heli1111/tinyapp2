<header>

  <% if (username === undefined){ %>
    <!-- get user name -->
    <form method="POST" action="/login">
      <li>
        <input id="username" type="text" name="username" placeholder="username" style="width: 200px">
        <input type="submit" value="submit">
      </li>
    </form>

  <% } else {%>
    <!-- username logout -->
    <form method="POST" action="/logout">
      <li>
        <%= `Hello ${username} ! ` %>  
        <input type="submit" value="logout">
      </li>
    </form>
  <% } %>

